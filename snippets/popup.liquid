<section>
  <div
    style="
      background-image: url('{{ section.settings.popupimg | image_url }}');
      background-color: white;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      width: 100%;
      height: 100%;
      border-radius: 10px;

      padding: 0px;
      margin: 0px;
    "
  >
    <div class="close-button" onclick="toggleCustomP()">Close</div>
  </div>
</section>

<style>
  .close-button {
    position: absolute;
    top: 10px;
    cursor: pointer;
    padding: 0px;
    margin: 0px;
  }
</style>

<script>
  function toggleCustomP() {
    const customPopUp = document.getElementById('popupclass');
    customPopUp.classList.toggle('active');
  }
</script>
